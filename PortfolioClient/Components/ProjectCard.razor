@inherits ComponentBase
@using PortfolioShared.Models

<div class="card mb-3 shadow-sm">
    <div class="card-body">
        <h5 class="card-title">@Project.Title</h5>
        <p class="card-text">@Project.Description</p>
        <p class="card-text">
            <small class="text-muted">
                Tech:
                @foreach (var tech in Project.Technologies)
                {
                    <span class="badge bg-primary me-1">@tech</span>
                }
            </small>
        </p>
        <a href="@Project.GitHubUrl" class="btn btn-primary" target="_blank">View on GitHub</a>
        <span class="badge bg-secondary float-end">@Project.Stars ★</span>
    </div>
</div>

@code {
    [Parameter]
    public Project Project { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        // Placeholder for future SignalR or API call
        await Task.CompletedTask;
    }
}
